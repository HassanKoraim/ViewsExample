@using ViewsExample.Models;
@{
    string appTitle = "Index Title";
    Person person = new Person() { Name = "Hassan", BirthDate = null };
    // Convert.ToDateTime("2000-07-08")
}
<!DOCTYPE html>
<html>
<head>
    <title>@appTitle</title>
    <meta charset="utf-8" />
</head>
<body>
    <h1>Welcome you are in the Index</h1>
    <h2>Hello @person.Name</h2>
    @if (person.BirthDate.HasValue)
    {
        //double? age = Math.Round(DateTime.Now.Subtract(person.BirthDate).TotalDays / 365.25);
        double age = Math.Round((DateTime.Now - (person.BirthDate)).Value.TotalDays / 365);
        <h2>@age years old</h2>
    }
    else
    {
        <h2>Date of Birth is unknown</h2>
    }

   
</body>
</html>